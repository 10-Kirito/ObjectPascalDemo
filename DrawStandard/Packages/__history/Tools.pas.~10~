unit Tools;

interface

uses
  Classes, Graphics, Windows;

CONST
  a = 1;

type
  TDrawMode = (drawBRUSH, drawLINE, drawRECTANGLE, drawCIRCLE, drawERASE, drawSELECT);

  TDrawPen = class(TPen)
  private
    FDrawMode: TDrawMode;
  public
    property PMode: TDrawMode read FDrawMode write FDrawMode;
  end;

implementation

end.
